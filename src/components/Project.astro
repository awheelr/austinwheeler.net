---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="card">
  <div class="preview">
    <slot name="header" />
  </div>
  <div class="info">
    <h3 class="title">{title}</h3>
    <p class="description">
      <slot />
    </p>
  </div>
</div>

<style>
  .card {
    display: flex;
    gap: 12px;
    align-items: center;
    justify-content: center;
    background-color: #1f1f1f;
    border-radius: 12px;
    /* flex-wrap: wrap; */
    width: 375px;
    height: 125px;
  }

  .preview {
    width: 85px;
    height: 85px;
    flex-shrink: 1;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    position: relative;
    cursor: pointer;
  }

  .info {
    width: 250px;
    flex-shrink: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .title {
    font-size: 24px;
    margin: 0;
  }

  .description {
    font-size: 12px;
  }

  .description {
    margin: 0;
  }

  .actions {
    display: flex;
    flex-wrap: wrap;
    gap: calc(var(--spacing) / 2);
  }
</style>